<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00008B"
    tools:context="com.rishabh2631.me.Dream_project">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dream Project"
        android:textStyle="bold"
        android:textColor="#FFFFFD"
        android:textSize="30dp"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:text="I would love to work under a project in which I get to learn new things under the guidance of the great people.My dream project is to develop an appliaction which will be the integration of multiples applications like Gmail, Facebook,Yahoo in a single application."
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Back to home"
        android:background="#FF8247"
        android:id="@+id/button12"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
